<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_setup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.toni.patakazi.SetupActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/setUpProfilePic"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="74dp"
        android:layout_weight="0.46"
        android:adjustViewBounds="false"
        android:padding="5dp"
        android:src="@drawable/user"
        app:civ_border_color="#FF000000"
        app:civ_border_width="0.0dp" />

    <Button
        android:text="Submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/setupSubmitBtn"
        style="@style/Widget.AppCompat.Button.Colored"
        android:textAllCaps="false" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/setUpUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_below="@+id/setUpProfilePic"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="44dp"
        android:hint="Username"
        app:met_floatingLabel="highlight"
        app:met_floatingLabelText="Username"
        app:met_iconLeft="@mipmap/ic_account_box_black_24dp"
        app:met_primaryColor="@color/colorAccent" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/setUpProfilePic"
        android:layout_alignEnd="@+id/setUpProfilePic"
        android:layout_marginEnd="14dp"
        android:clickable="true"
        app:fabSize="mini"
        app:srcCompat="@drawable/ic_add_a_photo_white_24dp" />

</RelativeLayout>

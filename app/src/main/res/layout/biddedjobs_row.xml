<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        app:srcCompat="@mipmap/background"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="16dp"
        android:id="@+id/bjImageView"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:layout_height="50dp"
        android:layout_width="50dp" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_alignTop="@+id/bjImageView"
        android:layout_toEndOf="@+id/bjImageView"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:cardCornerRadius="5dp"
        android:layout_height="90dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="Job Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/bdTitle"
                android:padding="3dp"
                android:textColor="@color/colorAccent"
                android:textStyle="normal|bold" />

            <TextView
                android:text="date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/bdDate"
                android:padding="3dp"
                android:textSize="10sp" />

            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/bdDesc"
                android:textSize="12sp"
                android:padding="3dp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <ImageButton
        android:layout_marginLeft="15dp"
        app:srcCompat="@mipmap/ic_delete_forever_black_24dp"
        android:id="@+id/bdDelete"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:layout_weight="0.38"
        android:layout_below="@+id/bjImageView"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"
        android:layout_width="34dp"
        android:layout_height="34dp" />
</RelativeLayout>
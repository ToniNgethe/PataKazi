<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_post_askill"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.toni.patakazi.PostAskillActivity">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:theme="?attr/actionBarTheme"
        android:minHeight="?attr/actionBarSize"
        android:id="@+id/skillToolBar"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/skillToolBar"
        android:weightSum="1">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="0.80">

            <TextView
                android:text="Skill Details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                android:padding="4dp"
                android:textSize="12sp"
                android:textStyle="normal|bold"
                android:textColor="@color/colorAccent"
                android:layout_marginLeft="5dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="1"
                android:layout_marginTop="20dp">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_margin="5dp"
                    android:layout_height="wrap_content">

                    <EditText
                        android:maxLines="1"
                        android:id="@+id/skillJobTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="What you can do"
                        android:textSize="14sp"
                        android:inputType="text" />

                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_margin="5dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.63">

                    <EditText
                        android:id="@+id/skillDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Describe it"
                        android:textSize="14sp"
                        android:inputType="textMultiLine" />

                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" >

            <TextView
                android:text="Location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:textSize="12sp"
                android:textStyle="normal|bold"
                android:textColor="@color/colorAccent"
                android:layout_marginLeft="5dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_marginTop="20dp">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_margin="5dp"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/skillLocation"
                        android:layout_width="223dp"
                        android:layout_height="wrap_content"
                        android:hint="Your Location"
                        android:textSize="14sp"
                        android:inputType="text" />

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <Button
                android:text="Locate me"
                android:layout_width="95dp"
                android:layout_height="38dp"
                android:id="@+id/skilLocateMe"
                android:layout_weight="1"
                android:layout_gravity="right"
                android:layout_marginTop="30dp"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:textAllCaps="false" />


        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <android.support.v7.widget.CardView
                android:layout_width="164dp"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="0.26">

                <TextView
                    android:text="Charging rate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:textSize="12sp"
                    android:textStyle="normal|bold"
                    android:textColor="@color/colorAccent"
                    android:layout_marginLeft="5dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:layout_marginTop="20dp">
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                        android:layout_marginTop="40dp">

                        <EditText
                            android:id="@+id/skillChargeRate"
                            android:layout_width="153dp"
                            android:layout_height="wrap_content"
                            android:hint="Your rate per hour"
                            android:textSize="14sp"
                            android:inputType="numberDecimal" />

                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="164dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="0.19">

                <TextView
                    android:text="Attach photo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:textSize="12sp"
                    android:textStyle="normal|bold"
                    android:textColor="@color/colorAccent"
                    android:layout_marginLeft="5dp" />

                <ImageButton
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="127dp"
                    app:srcCompat="@mipmap/addphoto"
                    android:id="@+id/skillPhoto"
                    android:adjustViewBounds="true"
                    android:padding="5dp"
                    android:scaleType="centerCrop" />


            </android.support.v7.widget.CardView>

        </LinearLayout>


    </LinearLayout>

    <Button
        android:text="Submit Skill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/submitSkill"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textAllCaps="false"
        style="@style/Widget.AppCompat.Button.Colored" />

</RelativeLayout>

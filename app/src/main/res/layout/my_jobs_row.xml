<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/myJobImage"
            android:layout_margin="5dp"
            android:scaleType="centerCrop"
            app:srcCompat="@mipmap/background"
            android:layout_height="89dp"
            android:layout_width="89dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="1">

            <android.support.v7.widget.CardView
                android:id="@+id/sadsdsa"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="5dp"
                app:cardElevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginTop="3dp"
                    android:orientation="vertical">

                    <TableLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="3dp"
                        android:stretchColumns="1">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingBottom="5dp"
                            android:paddingTop="5dp">

                            <TextView
                                android:id="@+id/textView3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="3dp"
                                android:text="Job Title" />

                            <TextView
                                android:id="@+id/myJobTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="TextView"
                                android:textColor="@color/colorPrimaryDark"
                                android:textStyle="normal|bold" />
                        </TableRow>


                        <TableRow
                            android:paddingBottom="5dp"
                            android:paddingTop="5dp">
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" >


                            <TextView
                                android:id="@+id/textView7"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="3dp"
                                android:text="Date posted" />

                            <TextView
                                android:id="@+id/myJobDatePosted"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="TextView"
                                android:textStyle="normal|bold" />

                        </TableRow>

                        <TableRow
                            android:paddingBottom="5dp"
                            android:paddingTop="5dp">
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" >


                            <TextView
                                android:id="@+id/textView17"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="3dp"
                                android:text="Location" />

                            <TextView
                                android:id="@+id/myJobLocationPosted"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="TextView"
                                android:textStyle="normal|bold" />

                        </TableRow>

                        <TableRow
                            android:paddingBottom="5dp"
                            android:paddingTop="5dp">
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/textView10"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="3dp"
                                android:text="No. of bidders" />

                            <TextView
                                android:id="@+id/myJobBids"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="TextView"
                                android:textColor="@color/colorAccent"
                                android:textStyle="normal|bold" />

                        </TableRow>


                    </TableLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_weight="0.31"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/MyJobsDelete"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    android:drawableLeft="@mipmap/ic_delete_forever_black_24dp"
                    android:padding="10dp"
                    android:text="Remove job"
                    android:textAllCaps="false"
                    android:textSize="12sp" />


                <Button
                    android:id="@+id/myJobViewBids"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"

                    android:drawableLeft="@mipmap/ic_group_black_24dp"
                    android:elevation="1dp"
                    android:padding="10dp"
                    android:text="View Bidders"
                    android:textAllCaps="false"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar_myjobs"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp" />

</RelativeLayout>
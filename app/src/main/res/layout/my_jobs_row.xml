<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/myJobImage"
            android:layout_margin="5dp"
            android:scaleType="centerCrop"
            app:srcCompat="@mipmap/background"
            android:layout_height="89dp"
            android:layout_width="89dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:weightSum="1">

        <android.support.v7.widget.CardView android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="5dp"
        android:layout_alignParentTop="true"
            android:id="@+id/sadsdsa"
            app:cardElevation="5dp">

        <LinearLayout
                android:orientation="vertical"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="2dp"
                android:layout_marginRight="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:stretchColumns="1"
                    android:padding="3dp">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp">

                        <TextView
                            android:text="Job Title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView3"
                            android:paddingLeft="3dp" />

                        <TextView
                            android:text="TextView"
                            android:textColor="@color/colorPrimaryDark"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:id="@+id/myJobTitle"
                            android:textStyle="normal|bold" />
                    </TableRow>



                    <TableRow
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp">
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" >


                        <TextView
                            android:text="Date posted"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView7"
                            android:paddingLeft="3dp" />

                        <TextView
                            android:text="TextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:id="@+id/myJobDatePosted"
                            android:textStyle="normal|bold" />

                    </TableRow>

                    <TableRow
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp">
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" >


                        <TextView
                            android:text="Location"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView17"
                            android:paddingLeft="3dp" />

                        <TextView
                            android:text="TextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:id="@+id/myJobLocationPosted"
                            android:textStyle="normal|bold" />

                    </TableRow>

                    <TableRow
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp">
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:text="No. of bidders"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView10"
                            android:paddingLeft="3dp" />

                        <TextView
                            android:text="TextView"
                            android:textColor="@color/colorAccent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:id="@+id/myJobBids"
                            android:textStyle="normal|bold" />

                    </TableRow>


                </TableLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_weight="0.31">

            <Button
                android:text="Remove job"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/MyJobsDelete"

                android:drawableLeft="@mipmap/ic_delete_forever_black_24dp"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:textAllCaps="false"
                android:textSize="12sp"
                android:padding="10dp" />


            <Button
                android:text="View Bidders"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/myJobViewBids"

                android:drawableLeft="@mipmap/ic_group_black_24dp"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:textAllCaps="false"
                android:textSize="12sp"
                android:elevation="1dp"
                android:padding="10dp" />
        </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar_myjobs"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp" />

</RelativeLayout>